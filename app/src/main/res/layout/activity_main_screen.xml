<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".Main_screen"
        tools:layout_editor_absoluteX="-49dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="56dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="Еще >"
            android:textColor="#F56844"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/sidemenu"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/oval"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            app:srcCompat="@drawable/sidemenu" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="ˬ"
            android:textAlignment="center"
            android:textColor="#979696"
            android:textSize="40dp"
            app:layout_constraintStart_toEndOf="@+id/adress2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="Адрес доставки"
            android:textColor="#979696"
            app:layout_constraintStart_toEndOf="@+id/sidemenu"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="textView3,more" />

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="Ленинская 25.к1, кв 420"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/sidemenu"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="91dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:layout_width="296dp"
            android:layout_height="72dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="Что бы вы хотели  заказать?"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile" />

        <TextView
            android:id="@+id/popular"
            android:layout_width="185dp"
            android:layout_height="43dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/yesevaoneregular"
            android:text="Популярно"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <EditText
            android:id="@+id/search"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="196dp"
            android:background="@drawable/corners"
            android:hint="Найти блюдо"
            android:inputType="textPassword"
            android:paddingStart="40dp"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="@+id/search"
            app:layout_constraintTop_toTopOf="@+id/search"
            app:srcCompat="@drawable/loupe" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="409dp"
            android:layout_height="55dp"
            android:background="#E5A253"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/home"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/order"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/order" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/favorite" />

            <ImageView
                android:id="@+id/profile2"
                android:layout_width="103dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile_menu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="322dp"
            android:layout_height="84dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="248dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/soup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_weight="1"
                android:src="@drawable/soup" />

            <ImageView
                android:id="@+id/oat"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/oats" />

            <ImageView
                android:id="@+id/meat"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/meat" />

            <ImageView
                android:id="@+id/fish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:src="@drawable/fish" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="414dp"
            android:layout_height="217dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popular"
            app:layout_constraintVertical_bias="0.0">

        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recyclerView"
            app:layout_constraintTop_toTopOf="@+id/recyclerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>